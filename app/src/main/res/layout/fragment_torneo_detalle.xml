<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 >

        <!-- Franja superior (como fillMaxHeight(0.20f)) -->
        <View
            android:id="@+id/view_top_header"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintDimensionRatio="H,16:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- “Avatar” circular (contenedor) -->

        <!-- Título (headlineLarge) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_torneo_avatar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="68dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="@id/view_top_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Círculo interno (2dp más chico por lado) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="152dp"
                android:layout_height="152dp"
                app:cardCornerRadius="78dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imagen_torneo"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/nombre_torneo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineLarge"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_torneo_avatar"
            tools:text="Torneo Internacional de Ajedrez" />


        <!-- Estado (tipo chip simple centrado) -->

        <!-- Bloque de información (centrado, bodyLarge) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_estado_torneo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="48dp"
            android:background="@drawable/bg_estado_torneo"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/nombre_torneo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ACTIVO" />


        <TextView
            android:id="@+id/tv_fecha_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="end"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/tv_hora_inicio"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_estado_torneo"
            tools:text="Inicio: 05/02/2026" />


        <TextView
            android:id="@+id/tv_hora_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_fecha_inicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_fecha_inicio"
            app:layout_constraintTop_toTopOf="@+id/tv_fecha_inicio"
            tools:text="19:00" />

        <TextView
            android:id="@+id/tv_fecha_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fecha_inicio"
            tools:text="Fin: 07/02/2026" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="14sp"

            android:textColor="?attr/colorOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_fin"
            tools:text="Descripción: Torneo suizo a 7 rondas." />

        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="14sp"

            android:textColor="?attr/colorOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion"
            tools:text="Ubicación: Calle Falsa 123" />

        <!-- Mensaje jugador (error/alerta) -->

        <!-- Cantidad inscriptos -->
        <TextView
            android:id="@+id/tv_mensaje_jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/solicit_el_alta_como_jugador_para_participar"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cantidad_inscriptos"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_cantidad_inscriptos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="14sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ubicacion"
            tools:text="Inscriptos: 24" />

        <!-- Botones (columna centrada) -->

        <!-- Espacio final -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_inscribirse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/inscribirse"
            android:textAllCaps="false"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cantidad_inscriptos"
            app:layout_constraintWidth_percent="0.75" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_partidas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:text="@string/ver_partidas"
            android:textAllCaps="false"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inscribirse"
            app:layout_constraintWidth_percent="0.75" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_editar_torneo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/cambiar_estado"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_estado_torneo"
            app:layout_constraintWidth_percent="0.75"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
