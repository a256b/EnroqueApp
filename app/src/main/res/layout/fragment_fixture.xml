<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/niebla">

    <androidx.constraintlayout.widget.Guideline android:id="@+id/row_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.28" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/row_mid" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/row_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline android:id="@+id/c1" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.11" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/c2" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.35" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/c3" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.65" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/c4" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.89" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/cMid1" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.225" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/cMid2" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.775" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/cCenter" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" app:layout_constraintGuide_percent="0.50" />

    <!-- Tarjeta FINAL -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/finalMatch"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="@id/row_top"
        app:layout_constraintStart_toStartOf="@id/cCenter"
        app:layout_constraintEnd_toEndOf="@id/cCenter">
        <TextView
            android:text="FINAL"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />
    </com.google.android.material.card.MaterialCardView>

    <!-- SEMIFINALES -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/semi1"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_mid"
        app:layout_constraintStart_toStartOf="@id/cMid1"
        app:layout_constraintEnd_toEndOf="@id/cMid1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SEMI 1"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/semi2"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_mid"
        app:layout_constraintStart_toStartOf="@id/cMid2"
        app:layout_constraintEnd_toEndOf="@id/cMid2">
        <TextView
            android:text="SEMI 2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- CUARTOS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/m1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/arena"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_bottom"
        app:layout_constraintStart_toStartOf="@id/c1"
        app:layout_constraintEnd_toEndOf="@id/c1">
        <TextView
            android:text="CUARTOS 1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/m2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/arena"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_bottom"
        app:layout_constraintStart_toStartOf="@id/c2"
        app:layout_constraintEnd_toEndOf="@id/c2">
        <TextView
            android:text="CUARTOS 2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/m3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/arena"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_bottom"
        app:layout_constraintStart_toStartOf="@id/c3"
        app:layout_constraintEnd_toEndOf="@id/c3">
        <TextView
            android:text="CUARTOS 3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/m4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/arena"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="@id/row_bottom"
        app:layout_constraintStart_toStartOf="@id/c4"
        app:layout_constraintEnd_toEndOf="@id/c4">
        <TextView
            android:text="CUARTOS 4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView android:id="@+id/line_semi1" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_bracket" android:alpha="0.4" app:layout_constraintTop_toBottomOf="@id/semi1" app:layout_constraintStart_toStartOf="@id/semi1" app:layout_constraintEnd_toEndOf="@id/semi1" />
    <ImageView android:id="@+id/line_semi2" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_bracket" android:alpha="0.4" app:layout_constraintTop_toBottomOf="@id/semi2" app:layout_constraintStart_toStartOf="@id/semi2" app:layout_constraintEnd_toEndOf="@id/semi2" />
    <ImageView android:id="@+id/line_final" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_bracket" android:alpha="0.4" app:layout_constraintTop_toBottomOf="@id/finalMatch" app:layout_constraintStart_toStartOf="@id/finalMatch" app:layout_constraintEnd_toEndOf="@id/finalMatch" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_iniciar_torneo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Iniciar Torneo"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.75"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>