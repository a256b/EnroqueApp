<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:focusable="true"
    android:padding="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Imagen de la tarjeta -->
        <ImageView
            android:id="@+id/imgTarjetaTorneo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/rewarded_ads_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Contenedor de texto -->
        <LinearLayout
            android:id="@+id/contenedorTexto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/imgTarjetaTorneo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgEstrella"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/textNombreTorneo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nombre del torneo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/textUbicacionTorneo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Calle Falsa 123"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/textInscriptosTorneo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Inscriptos: 5"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEstrella"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/estrella"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_star" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
