<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnLimpiarFiltro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar Filtro"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etNombreFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del torneo"
        android:inputType="text"/>

    <Spinner
        android:id="@+id/spinnerUbicacionFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/spinnerEstadoFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etDescripcionFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:layout_marginTop="8dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etFechaInicioFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de inicio"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:clickable="true"/>

</LinearLayout>
